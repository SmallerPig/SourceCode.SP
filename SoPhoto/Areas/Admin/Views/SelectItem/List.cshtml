@{
    ViewBag.Title = "List";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@model IEnumerable<SoPhoto.Entity.SelectItem>
<div class="contentItemGroup">
    <div class="contentItem" onlycontent>
        <!--部分内容由于每个项目涉及都不一样，这部分样式没有模板化，以后项目的时候也是直接写在html标签style样式里就行，比较方便修改-->
        <a href="Create" class="inputButton" lefticon style="background-image:url(/Content/ConsoleResource/media/icon_plus.png);float:left;">添加条目</a>
    </div>
    <div class="contentItem" onlycontent>
        <table class="tableList">
            <thead>
                <tr>
                    <!--在thead里的td内标注宽度，对于未标注宽度的条目，则自动分配剩余宽度-->
                    <td width="48">id</td>
                    <td>显示名称</td>
                    <td width="60">编辑</td>
                    <td width="60">编辑值内容</td>
                    <td width="40">删除</td>
                </tr>
            </thead>
            <tbody>
                @{
                    if (Model != null)
                    {
                        foreach (var selectItem in Model)
                        {
                            <tr>
                                <td>@selectItem.Id</td>
                                <td leftalign>@selectItem.Name</td>
                                <td><a href="/Admin/SelectItem/Edit/@selectItem.Id" class="tableListItemEditIcon"></a></td>
                                <td><a href="/Admin/SelectCondition/ListByItem?itemid=@selectItem.Id" class="tableListItemEditIcon"></a></td>
                                <td><a href="Javascript:" class="tableListItemDeleteIcon"></a></td>
                            </tr>
                        }
                    }
                }
            </tbody>
        </table>
    </div>
    <div class="contentItem" onlycontent>
        <!--部分内容由于每个项目涉及都不一样，这部分样式没有模板化，以后项目的时候也是直接写在html标签style样式里就行，比较方便修改-->
        <a class="inputButton" href="@ViewData["perPage"]">上一页</a>
        <input type="text" class="inputText" style="margin-left:16px;width:48px;text-align:right;" value="@ViewData["pageIndex"]" />
        <span class="contentItemInfoWrapper"> / @ViewData["pageCount"]</span>
        <a class="inputButton" href="@ViewData["nextPage"]" style="margin-left:16px;">下一页</a>
    </div>
</div>
