<script type="text/javascript">
    function validateForm() {
        return $("#form1").validate({
            rules: {
                Address: { required: true },
                Title: { required: true },
                summary: { required: true },
                author: { required: true },
                affirming: { required: true },
                FileSize: { required: true },
                PicSize: { required: true },
                UseAndBuy: { required: true },
                CreateDate: { required: true },
                keywords: { required: true },
            },
            messages: {
                Address: { required: "不能为空" },
                Title: { required: "不能为空" },
                summary: { required: "不能为空" },
                author: { required: "不能为空" },
                affirming: { required: "不能为空" },
                FileSize: { required: "不能为空" },
                PicSize: { required: "不能为空" },
                CreateDate: { required: "不能为空" },
                UseAndBuy: { required: "不能为空" },
                keywords: { required: "不能为空" },
            }
        }).form();
    };
    function doSubmit() {
        if (validateForm()) {
            $("#form1").submit();
        }
    }
</script>
